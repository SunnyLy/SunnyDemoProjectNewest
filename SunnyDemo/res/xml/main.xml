<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="开启抢红包平台">

        <com.smartbracelet.sunny.sunnydemo2.plugin.CustomSwitchPreference
            android:defaultValue="true"
            android:title="微信"
            android:icon="@drawable/settings_ic_wechat"
            android:key="KEY_ENABLE_WECHAT"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="关于">
        <Preference
            android:title="关于抢红包"
            android:summary="不能贪心哦"
            android:key="KEY_FOLLOW_ME"/>

        <Preference
            android:title="打赏"
            android:summary="如果觉得我做的好，就打赏我一点吧！"
            android:key="KEY_DONATE_ME"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="平台设置">

        <Preference
            android:title="微信设置"
            android:summary="更改抢红包模式，可以防封号"
            android:key="WECHAT_SETTINGS"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="高级设置">
        <com.smartbracelet.sunny.sunnydemo2.plugin.CustomSwitchPreference
            android:title="快速监听通知栏"
            android:summary="闪电模式，抢红包更快更稳定"
            android:defaultValue="false"
            android:key="KEY_NOTIFICATION_SERVICE_TEMP_ENABLE"/>

        <Preference
            android:title="通知设置"
            android:key="NOTIFY_SETTINGS"/>
    </PreferenceCategory>
</PreferenceScreen>