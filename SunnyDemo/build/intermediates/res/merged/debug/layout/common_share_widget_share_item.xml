<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_item_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_share_item_bg_color_selector"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/share_item_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:src="@drawable/common_share_logo_wechatmoments"/>

    <TextView
        android:id="@+id/share_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CommonShare_TextView"
        android:layout_marginTop="@dimen/dimens10"
        android:layout_gravity="center"
        android:text="朋友圈"/>

</LinearLayout>