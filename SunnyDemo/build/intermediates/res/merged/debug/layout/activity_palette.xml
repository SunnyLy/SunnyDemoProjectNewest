<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/palette_iv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pager2"/>


    <TextView
        android:id="@+id/palette_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center"
        android:text="图片颜色活力:getVibrantSwatch()"
        />

    <TextView
        android:id="@+id/palette_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center"
        android:text="图片颜色活力暗色:getDarkVibrantSwatch()"
        />

    <TextView
        android:id="@+id/palette_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center"
        android:text="图片颜色活力亮色:getLightVibrantSwatch()"
        />

    <TextView
        android:id="@+id/palette_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center"
        android:text="图片颜色柔和:getMutedSwatch()"
        />
    <TextView
        android:id="@+id/palette_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center"
        android:text="图片颜色柔和暗色:getDarkMutedSwatch()"
        />
    <TextView
        android:id="@+id/palette_text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center"
        android:text="图片颜色柔和亮色:.getLightMutedSwatch()"
        />
</LinearLayout>
</ScrollView>